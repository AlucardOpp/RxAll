mixin modal-form-government()
  .modal-form
    h2.modal-form__title!="Government"
    p.modal-form__description!="Partner to&nbsp;reduce fake drugs"
    ul.modal-form__list
      li.modal-form__item
        +icon("icon-check-mark", 20, 20)
        span!="Cheap <br> upfront"
      li.modal-form__item
        +icon("icon-check-mark", 20, 20)
        span!="Low operating <br> costs"
      li.modal-form__item
        +icon("icon-check-mark", 20, 20)
        span!="Free annual <br> trainings"
    .modal-form__form(data-validate)
      form(action="#")
        .modal-form__inputs
          .modal-form__input
            +custom-input({inputLabel: "Name", inputType: "text", inputName: "government-user-name", inputId: "government-user-name", inputPlaceholder: "First name", inputError: "please check again"})(data-validate-type="text" data-limitations="letters")
          .modal-form__input
            +custom-input({inputLabel: "E-mail", inputType: "email", inputName: "government-user-email", inputId: "government-user-email", inputPlaceholder: "name@domain.com", inputError: "please check again"})(data-validate-type="email")
          .modal-form__input
            +custom-input({inputLabel: "Phone", inputType: "tel", inputName: "government-user-tel", inputId: "government-user-tel", inputPlaceholder: "1-877-378-4100", inputError: "please check again", inputMinLength: 7, inputMaxLength: 20})(data-validate-type="simple-phone")
          .modal-form__input
            +custom-input({inputLabel: "Agency name", inputType: "text", inputName: "government-user-agency-name", inputId: "government-user-agency-name", inputPlaceholder: "Agency name", inputError: "please check again"})(data-validate-type="text")
          .modal-form__input
            +custom-input({inputLabel: "City", inputType: "text", inputName: "government-user-city", inputId: "government-user-city", inputPlaceholder: "Enter your city", inputError: "please check again"})(data-validate-type="text")
          .modal-form__input
            +custom-input({inputLabel: "Country", inputType: "text", inputName: "government-user-country", inputId: "government-user-country", inputPlaceholder: "Enter your country/region", inputError: "please check again"})(data-validate-type="text")
        button.btn.btn--sky.modal-form__button(type="submit" aria-label="Submit form")
          +icon("icon-btn-arrow-right", 16, 14)
          span!="Make inquiry"
