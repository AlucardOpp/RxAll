mixin modal-form-rxpos()
  .modal-form
    h2.modal-form__title!="RxPos"
    p.modal-form__description!="Sales &amp;&nbsp;purchases software"
    ul.modal-form__list
      li.modal-form__item
        +icon("icon-check-mark", 20, 20)
        span!="Complete <br> automation"
      li.modal-form__item
        +icon("icon-check-mark", 20, 20)
        span!="Simple <br> payments"
      li.modal-form__item
        +icon("icon-check-mark", 20, 20)
        span!="Inventory & reordering <br> management"
    .modal-form__form(data-validate)
      form(action="#")
        .modal-form__inputs
          .modal-form__input
            +custom-input({inputLabel: "Name", inputType: "text", inputName: "rxpos-user-name", inputId: "rxpos-user-name", inputPlaceholder: "First name", inputError: "please check again"})(data-validate-type="text" data-limitations="letters")
          .modal-form__input
            +custom-input({inputLabel: "E-mail", inputType: "email", inputName: "rxpos-user-email", inputId: "rxpos-user-email", inputPlaceholder: "name@domain.com", inputError: "please check again"})(data-validate-type="email")
          .modal-form__input
            +custom-input({inputLabel: "Phone", inputType: "tel", inputName: "rxpos-user-tel", inputId: "rxpos-user-tel", inputPlaceholder: "1-877-378-4100", inputError: "please check again", inputMinLength: 7, inputMaxLength: 20})(data-validate-type="simple-phone")
          .modal-form__input
            +custom-input({inputLabel: "Company", inputType: "text", inputName: "rxpos-user-company", inputId: "rxpos-user-company", inputPlaceholder: "Company name", inputError: "please check again"})(data-validate-type="text")
          .modal-form__input
            +custom-input({inputLabel: "City", inputType: "text", inputName: "rxpos-user-city", inputId: "rxpos-user-city", inputPlaceholder: "Enter your city", inputError: "please check again"})(data-validate-type="text")
          .modal-form__input
            +custom-input({inputLabel: "Country", inputType: "text", inputName: "rxpos-user-country", inputId: "rxpos-user-country", inputPlaceholder: "Enter your country/region", inputError: "please check again"})(data-validate-type="text")
        button.btn.btn--sky.modal-form__button(type="submit" aria-label="Submit form")
          +icon("icon-btn-arrow-right", 16, 14)
          span!="Make inquiry"
