mixin modal-form-rxhmo()
  .modal-form
    h2.modal-form__title!="RxHMO"
    p.modal-form__description!="Health maintenance organization"
    ul.modal-form__list
      li.modal-form__item
        +icon("icon-check-mark", 20, 20)
        span!="Authentic drugs <br> without waiting"
      li.modal-form__item
        +icon("icon-check-mark", 20, 20)
        span!="Large pharmacy <br> network"
      li.modal-form__item
        +icon("icon-check-mark", 20, 20)
        span!="Fast and easy <br> application process"
    .modal-form__form(data-validate)
      form(action="#")
        .modal-form__inputs
          .modal-form__input
            +custom-input({inputLabel: "Name", inputType: "text", inputName: "rxhmo-user-name", inputId: "rxhmo-user-name", inputPlaceholder: "First name", inputError: "please check again"})(data-validate-type="text" data-limitations="letters")
          .modal-form__input
            +custom-input({inputLabel: "E-mail", inputType: "email", inputName: "rxhmo-user-email", inputId: "rxhmo-user-email", inputPlaceholder: "name@domain.com", inputError: "please check again"})(data-validate-type="email")
          .modal-form__input
            +custom-input({inputLabel: "Phone", inputType: "tel", inputName: "rxhmo-user-tel", inputId: "rxhmo-user-tel", inputPlaceholder: "1-877-378-4100", inputError: "please check again", inputMinLength: 7, inputMaxLength: 20})(data-validate-type="simple-phone")
          .modal-form__input
            +custom-input({inputLabel: "Company", inputType: "text", inputName: "rxhmo-user-company", inputId: "rxhmo-user-company", inputPlaceholder: "Company name", inputError: "please check again"})(data-validate-type="text")
          .modal-form__input
            +custom-input({inputLabel: "City", inputType: "text", inputName: "rxhmo-user-city", inputId: "rxhmo-user-city", inputPlaceholder: "Enter your city", inputError: "please check again"})(data-validate-type="text")
          .modal-form__input
            +custom-input({inputLabel: "Country", inputType: "text", inputName: "rxhmo-user-country", inputId: "rxhmo-user-country", inputPlaceholder: "Enter your country/region", inputError: "please check again"})(data-validate-type="text")
        button.btn.btn--sky.modal-form__button(type="submit" aria-label="Submit form")
          +icon("icon-btn-arrow-right", 16, 14)
          span!="Make inquiry"
