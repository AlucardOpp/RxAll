      ul.case-item__list
        each item in data.list
          li
            h3!=item.title
            p!=item.text
            if (item.link)
              a.link.link--blue(href=item.link.href data-open-modal=(hasForms === true && item.modalForm) ? `form-${item.modalForm}` : null)
                span!=item.link.text
                  +icon("icon-arrow-right", 15, 20).link__icon.link__icon--right
